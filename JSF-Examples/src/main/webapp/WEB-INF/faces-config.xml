<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<!-- managed beans - name used in *.xhtml files -->
	<managed-bean>
		<managed-bean-name>person</managed-bean-name>
		<managed-bean-class>com.jurdox.beans.RegistrationPerson</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<!-- add property files -->
	<application>
		<resource-bundle>
			<base-name>com.jurdox.properties.label</base-name>
			<var>lbl</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>com.jurdox.properties.message</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>
</faces-config>